<%- include("./partials/header") -%>

<div class="container my-5 customContainer">
  <a class="btn btn-dark me-3 customButton" href="/compose">Add New Blog</a>
  <h1><%= pageHeader %></h1>
  <p><%= contentText %></p>

  <% if(blogs.length > 0){ %>
      <% for(let i=0; i<blogs.length; i++){ %>
        <div class="my-3">
          <h1 href="/"><%= blogs[i].title %></h1>
          <p>
            <%= blogs[i].content.substring(0, 100) + " ..." %>
            <a href="/post/<%= blogs[i].title %>">Read More</a>  
          </p>
        </div>
      <% } %>
  <% } %>
</div>

<%- include("./partials/footer") -%>
